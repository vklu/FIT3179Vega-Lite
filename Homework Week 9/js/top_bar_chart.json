{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top Risk Factors for Death",
  "data": {"url": "https://raw.githubusercontent.com/vklu/FIT3179Vega-Lite/main/Homework%20Week%209/data/risk-factor-death.csv"},
  "mark": "bar",
  "transform": [
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{ "field": "Count", "order": "descending" }]
    },
    {
      "calculate": "datum.rank < 10 ? datum.Risk_Factor : 'All Others'", "as": "ranked_director"
    }
  ],
  "encoding": {
    "x": {
      "field": "Count",
      "type": "quantitative"
    },
    "y": {
      "field": "ranked_director",
      "type": "nomial",
      "sort": {"field": "Count", "op": "average", "order":"descending"}
    }
  }
}
