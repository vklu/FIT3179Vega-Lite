{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Global Deaths from Air Pollution in 2017",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/vklu/FIT3179Vega-Lite/main/data/world.geo.topojson",
    "format": {"type": "topojson", "feature": "world.geo"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vklu/FIT3179Vega-Lite/main/data/death-rates-from-air-pollution.csv"
        },
        "key": "Entity",
        "fields": ["Air pollution (total) (deaths per 100,000)", "Year"]
      }
    }
  ],
  "projection": {"type": "equirectangular"},
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Air pollution (total) (deaths per 100,000)",
      "type": "quantitative"
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "Country"},
      {
        "field": "Air pollution (total) (deaths per 100,000)",
        "type": "quantitative"
      }
    ]
  },
  "config": {}
}