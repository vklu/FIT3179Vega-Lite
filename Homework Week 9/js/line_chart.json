{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Air Pollution from 2010 to 2017",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://raw.githubusercontent.com/vklu/FIT3179Vega-Lite/main/Homework%20Week%209/data/PM2.5%20Global%20Air%20Pollution%202010-2017-10-countries_table_change.csv"
  },
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year" },
    "y": {"field": "PM25", "type": "quantitative", "title": "PM 2.5 Air Pollution"},
    "color": {
      "condition": {
        "param": "hover",
        "field": "symbol",
        "type": "nominal",
        "legend": null
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "param": "hover",
        "value": 1
      },
      "value": 0.2
    }
    },
    "layer": [{
      "params": [{
        "name": "hover",
        "value": [{"Country Name": "Australia"}],
        "select": {
          "type": "point",
          "fields": ["Country Name"],
          "on": "mouseover"
        }
      }],
      "mark": {"type":"line", "strokeWidth": 8, "stroke": "transparent"}
    }, {
      "mark": "line"
    }, {
      "encoding": {
        "x": {"aggregate": "max", "field": "Year"},
        "y": {"aggregate": {"argmax": "Year"}, "field": "PM25"}
      },
      "layer": [{
        "mark": {"type": "circle"}
      }, {
        "mark": {"type": "text", "align": "left", "dx": 4},
        "encoding": {"text": {"field":"Country Name", "type": "nominal"}}
      }]
    }],
    "config": {"view": {"stroke": null}}
}