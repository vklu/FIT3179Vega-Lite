{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Air Pollution from 2010 to 2017",
  "width": 400,
  "height": 1000,
  "data": {
    "url": "https://raw.githubusercontent.com/vklu/FIT3179Vega-Lite/main/Homework%20Week%209/data/PM2.5%20Global%20Air%20Pollution%202010-2017-10-countries_table_change.csv"
  },
  "transform": [{"filter": "datum.Country!=='New Zealand'"}],
  "encoding": {
    "x": {"field": "Year", "type": "ordinal", "title": "Year" },
    "y": {"field": "PM25", "type": "quantitative", "title": "PM 2.5 Air Pollution"},
    "tooltip": [
      {"field": "Country", "type": "nominal", "title": "Country"},
      {
        "field": "PM25",
        "type": "quantitative",
        "title": "PM 2.5 Level",
        "format": ".2f"
      },
      {"field":"Year", "type":"quantitative"}
    ],
    "color": {
      "condition": {
        "param": "hover",
        "field": "Country",
        "type": "nominal"
      },
      "value": "grey"
    },
    "opacity": {
      "condition": {
        "param": "hover",
        "value": 1
      },
      "value": 0.2
    }
    },
    "layer": [{
      "params": [{
        "name": "hover",
        "value": [{"Country": "Australia"}],
        "select": {
          "type": "point",
          "fields": ["Country"],
          "on": "mouseover"
        }
      }],
      "mark": {"type":"line", "point": true, "strokeWidth": 8, "stroke": "transparent"}
    }, {
      "mark": "line"
    }],
    "config": {"view": {"stroke": null}, "background": "beige", "title": {"font": "roboto", "fontSize": 16, "fontWeight": "bold"}}
}